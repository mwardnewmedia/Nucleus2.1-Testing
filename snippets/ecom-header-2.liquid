<header class="site-header" role="banner" data-section-id="{{ section.id }}" data-section-type="header-section" id="ecom2-site-header">
  <style>
    @media (min-width: 769px) {
      #ecom2-site-header .ecom2-row { display: flex !important; align-items: center !important; justify-content: space-between !important; gap: 15px !important; width: 100% !important; }
      #ecom2-site-header .ecom2-left { flex: 0 0 {% if settings.nmr_local %}40%{% else %}auto{% endif %} !important; display: flex !important; align-items: center !important; }
      #ecom2-site-header .ecom2-center { flex: 1 1 auto !important; display: flex !important; justify-content: center !important; align-items: center !important; min-width: 200px !important; }
      #ecom2-site-header .ecom2-center .search-bar { width: 100% !important; max-width: 760px !important; }
      #ecom2-site-header .ecom2-right { flex: 0 0 260px !important; display: flex !important; justify-content: flex-end !important; align-items: center !important; min-width: fit-content !important; }
    }
    @media (max-width: 768px) {
      #ecom2-site-header .ecom2-left-flex { display: flex !important; flex-direction: column !important; align-items: center !important; justify-content: center !important; text-align: center !important; }
    }
  </style>
  <div class="wrapper">

    <div class="flex ecom2-row">
      <div class="flex-logo flex-item ecom2-left" style="margin-right:30px;">
        <div class="ecom2-left-flex" style="display:flex; align-items:center; gap:15px;">
        {% if request.page_type == 'index' %}
          <h1 class="header-logo" itemscope itemtype="http://schema.org/Organization">
        {% else %}
          <div class="h1 header-logo" itemscope itemtype="http://schema.org/Organization">
        {% endif %}
          {% if section.settings.logo %}
          {% capture image_size %}{{ section.settings.logo_max_height | escape }}x{% endcapture %}
          {%- assign img_url = section.settings.logo | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          {% capture logo_alt %}{{ section.settings.logo.alt | default: shop.name }}{% endcapture %}
          <a href="{{ routes.root_url }}" itemprop="url">
            <div class="lazyload__image-wrapper no-js header-logo__image" style="max-height:{{ section.settings.logo_max_height }}px;">
                <img class="lazyload js"
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                  data-aspectratio="{{ section.settings.logo.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ logo_alt | escape }}"
                  style="height:{{ section.settings.logo_max_height }}px;">
            </div>
            <noscript>
              {% capture image_size %}{{ section.settings.logo_max_height | escape }}x{% endcapture %}
              <img src="{{ section.settings.logo | img_url: image_size }}"
                srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
                alt="{{ logo_alt | escape }}"
                itemprop="logo"
                style="max-height:{{ section.settings.logo_max_height }}px;">
            </noscript>
          </a>
          <!--- Sponsor Logo --->
          {% if section.settings.sponsor_logo %}
          {% capture image_size %}{{ section.settings.sponsor_logo_max_height | escape }}x{% endcapture %}
          {%- assign img_url = section.settings.sponsor_logo | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          {% capture sponsor_logo_alt %}{{ section.settings.sponsor_logo.alt | default: shop.name }}{% endcapture %}
          <a href="{{ section.settings.sponsor_link }}" itemprop="url" style="margin-left:10px;" class="medium-down--hide">
            <div class="lazyload__image-wrapper no-js header-logo__image" style="max-height:{{ section.settings.sponsor_logo_max_height }}px;">
                <img class="lazyload js"
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                  data-aspectratio="{{ section.settings.sponsor_logo.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ sponsor_logo_alt | escape }}"
                  style="height:{{ section.settings.sponsor_logo_max_height }}px;">
            </div>
            <noscript>
              {% capture image_size %}{{ section.settings.sponsor_logo_max_height | escape }}x{% endcapture %}
              <img src="{{ section.settings.sponsor_logo | img_url: image_size }}"
                srcset="{{ section.settings.sponsor_logo | img_url: image_size }} 1x, {{ section.settings.sponsor_logo | img_url: image_size, scale: 2 }} 2x"
                alt="{{ sponsor_logo_alt | escape }}"
                itemprop="logo"
                style="max-height:{{ section.settingssponsor_logo_max_height }}px;">
            </noscript>
          </a>
          {% endif %}  
          {% else %}
            <a href="{{ routes.root_url }}" itemprop="url">{{ shop.name }}</a>
          {% endif %}
        {% if request.page_type == 'index' %}
          </h1>
        {% else %}
          </div>
        {% endif %}
        {% if settings.nmr_local %}
          <div class="header-store-locator medium-down--hide">
            <script>
              window.MightyLocationSelectorConfig = {
                theme: 'light',
                showHours: true,
                showCityState: true,
                showPhone: true,
                defaultLocationId: null
              };
            </script>
            <div id="mighty-location-selector"></div>
            <script src="https://local.newmediaretailer.com/vendor/mighty/mighty-location-selector-widget.js" defer></script>
          </div>
        {% endif %}
        </div>
      </div>

      <div class="flex-auto flex-item ecom2-center{% if section.settings.hide_search_bar or page.template_suffix contains 'dalp' %} hide-element{% endif %}">
        {% unless section.settings.hide_search_bar or page.template_suffix contains 'dalp' %}
          {% include 'ecom2-search-bar' %}
        {% endunless %}
      </div>

      {% if settings.nmr_local %}
        <div class="flex-item ecom2-right" style="display: flex; align-items: center; gap: 20px; flex-wrap: nowrap;" id="ecom2-account-cart">      
      {% else %}
        <div class="flex-item ecom2-right" style="display: flex; align-items: center; gap: 30px; flex-wrap: nowrap;" id="ecom2-account-cart">      
      {% endif %}
		<div class="header-customer-login-wrapper{% if section.settings.hide_customer_login or page.template_suffix contains 'dalp' %} hide-element{% endif %}" style="margin-left:30px;">
          {% unless section.settings.hide_customer_login or page.template_suffix contains 'dalp' %}
              {% if settings.nmr_local %}
                <div style="display: flex; align-items: center; white-space: nowrap;">
                  <i style="font-size: 24px; margin-right: 8px;" class="fa-solid fa-circle-user"></i>
                  {% if shop.customer_accounts_enabled %}
                    <span class="ecom2-site-header--text-links medium-down--hide" style="white-space: nowrap; margin-left: 0px;">
                    {% if customer %}
                      {% capture first_name %}{% endcapture %}
                        <a style="display:inline-block; white-space: nowrap;" href="{{ routes.account_url }}">Hi, {{ customer.first_name }}</a> 
                      {% else %}
                        {{ 'layout.customer.sign_in' | t | customer_login_link }}
                    {% endif %}    
                    </span>
                  {% endif %}
                </div>
              {% else %}
                <div style="display: flex; align-items: center; white-space: nowrap;">
                  <i style="font-size: 24px; margin-right: 8px;" class="fa-solid fa-circle-user"></i>
                  {% if shop.customer_accounts_enabled %}
                    <span class="ecom2-site-header--text-links medium-down--hide" style="white-space: nowrap;">
                    {% if customer %}
                      {% capture first_name %}{% endcapture %}
                        <a style="display:inline-block; white-space: nowrap;" href="{{ routes.account_url }}">Hi, {{ customer.first_name }}</a> 
                      {% else %}
                        {{ 'layout.customer.sign_in' | t | customer_login_link }}
                        <span class="site-header--spacer">{{ 'layout.customer.or' | t }}</span>
                        <span>{{ 'layout.customer.create_account' | t | customer_register_link }}</span>
                    {% endif %}    
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            {% endunless %}
        </div>
            
		    <div class="header-cart-wrapper{% if section.settings.hide_shopping_links or page.template_suffix contains 'dalp' %} hide-element{% endif %}">
          {% unless section.settings.hide_shopping_links or page.template_suffix contains 'dalp' %}
            <a href="{{ routes.cart_url }}" class="header-cart-btn ecom2-cart cart-toggle" id="ecom-header-cart" aria-label="shopping cart">
              <span class="icon icon-cart"></span>
      		  <span class="cart-count cart-badge--desktop">{{ cart.item_count }}</span>
            </a>
          {% endunless %}
        </div>

      </div>
    </div>
</header>



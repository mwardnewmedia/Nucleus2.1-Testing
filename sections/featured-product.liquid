<!-- Featured Product Specific JavaScript - Matches product-template functionality -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Featured Product Image Zoom Functionality - Matches product-template
  function setupFeaturedProductZoom() {
    const featuredImages = document.querySelectorAll('#ProductSection-{{ section.id }} .featured-product-main-image');
    
    featuredImages.forEach(image => {
      let zoomContainer = null;
      
      image.addEventListener('mouseenter', function(e) {
        if (window.innerWidth <= 767 || ('ontouchstart' in window) || navigator.maxTouchPoints) {
          return; // Disable zoom on mobile/touch devices
        }
        
        if (!zoomContainer) {
          zoomContainer = document.createElement('div');
          zoomContainer.classList.add('featured-product-zoom-container');
          image.parentNode.appendChild(zoomContainer);
        }
        
        const zoomImageUrl = image.getAttribute('data-zoom-image') || image.src;
        zoomContainer.style.backgroundImage = `url('${zoomImageUrl}')`;
        zoomContainer.style.display = 'block';
        
        updateFeaturedZoomPosition(e, image, zoomContainer);
      });
      
      image.addEventListener('mousemove', function(e) {
        if (zoomContainer) {
          updateFeaturedZoomPosition(e, image, zoomContainer);
        }
      });
      
      image.addEventListener('mouseleave', function() {
        if (zoomContainer) {
          zoomContainer.style.display = 'none';
        }
      });
    });
  }
  
  function updateFeaturedZoomPosition(e, originalImage, zoomContainer) {
    const originalRect = originalImage.getBoundingClientRect();
    const mouseX = e.clientX - originalRect.left;
    const mouseY = e.clientY - originalRect.top;
    
    const percentX = (mouseX / originalRect.width);
    const percentY = (mouseY / originalRect.height);
    
    const zoomLevel = 2.5;
    const backgroundSizeX = originalImage.naturalWidth * zoomLevel;
    const backgroundSizeY = originalImage.naturalHeight * zoomLevel;
    
    const backgroundPosX = -percentX * (backgroundSizeX - zoomContainer.offsetWidth);
    const backgroundPosY = -percentY * (backgroundSizeY - zoomContainer.offsetHeight);
    
    zoomContainer.style.backgroundSize = `${backgroundSizeX}px ${backgroundSizeY}px`;
    zoomContainer.style.backgroundPosition = `${backgroundPosX}px ${backgroundPosY}px`;
    zoomContainer.style.left = `${mouseX + 20}px`;
    zoomContainer.style.top = `${mouseY + 20}px`;
  }
  
  // Featured Product Thumbnail Click Handler - Matches product-template functionality
  function setupFeaturedProductThumbnails() {
    const thumbButtons = document.querySelectorAll('#ProductSection-{{ section.id }} .featured-product-thumb-button');
    
    thumbButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const mediaId = this.getAttribute('data-media-id');
        
        // Hide all media wrappers
        const allWrappers = document.querySelectorAll('#ProductSection-{{ section.id }} .featured-product-media-wrapper');
        allWrappers.forEach(wrapper => {
          wrapper.classList.add('featured-product-media-hidden');
        });
        
        // Show selected media wrapper
        const selectedWrapper = document.querySelector('#ProductSection-{{ section.id }} [data-image-id="' + mediaId + '"]');
        if (selectedWrapper) {
          selectedWrapper.classList.remove('featured-product-media-hidden');
        }
        
        // Update thumbnail active state
        thumbButtons.forEach(thumb => {
          thumb.classList.remove('active');
        });
        this.classList.add('active');
      });
    });
    
    // Set first thumbnail as active
    if (thumbButtons.length > 0) {
      thumbButtons[0].classList.add('active');
    }
  }
  
  // Initialize functionality
  setupFeaturedProductZoom();
  setupFeaturedProductThumbnails();
});
</script>


<script>
  $(document).ready(function() {
    // Setup quantity selector functionality for featured product
    $('#ProductSection-{{ section.id }} .pdp-quantity-selector .js--qty-adjuster').on('click', function() {
      var el = $(this);
      var qtySelector = el.siblings('.js--num');
      var qty = parseInt(qtySelector.val()) || 1;
      var qtyMin = 1;
      
      // Add or subtract from the current quantity
      if (el.hasClass('js--add')) {
        qty = qty + 1;
      } else {
        qty = qty <= qtyMin ? qtyMin : qty - 1;
      }
      
      // Update the input's number
      qtySelector.val(qty);
      
      // Trigger change event for form submission
      qtySelector.trigger('change');
    });
    
    // Ensure quantity is always at least 1 for featured product
    $('#ProductSection-{{ section.id }} .pdp-quantity-selector .js--num').on('blur', function() {
      var qty = parseInt($(this).val()) || 1;
      if (qty < 1) {
        $(this).val(1);
      }
    });
    
    // Featured Product Clickable Box Selector Functionality
    $('#ProductSection-{{ section.id }} .variant-selector-boxes .variant-box').on('click', function() {
      var $box = $(this);
      var variantId = $box.data('variant-id');
      var $select = $box.closest('.variant-selector-boxes').find('select');
      
      // Don't allow selection of sold out variants
      if ($box.hasClass('sold-out')) {
        return;
      }
      
      // Update selected state
      $box.siblings('.variant-box').removeClass('selected');
      $box.addClass('selected');
      
      // Update hidden select
      $select.val(variantId).trigger('change');
      
      // Update SKU and UPC display if they exist
      var sku = $box.data('sku');
      var barcode = $box.data('barcode');
      
      if (sku) {
        $('#ProductSection-{{ section.id }} .variant-sku').text(sku);
      }
      if (barcode) {
        $('#ProductSection-{{ section.id }} .variant-barcode').text(barcode);
      }
    });
  });
</script>
